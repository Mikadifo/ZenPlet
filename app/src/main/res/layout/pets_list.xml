<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBackground">

    <ImageView
        android:id="@+id/imgPet"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewNamePetsNew"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/ptsans"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPet"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTypePetsNew"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ptsans"
        android:text="Type"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgPet"
        app:layout_constraintTop_toBottomOf="@+id/textViewNamePetsNew" />

    <TextView
        android:id="@+id/textViewGenrePetsNew"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/ptsans"
        android:text="Genre"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewTypePetsNew"
        app:layout_constraintStart_toEndOf="@+id/textViewTypePetsNew" />

    <TextView
        android:id="@+id/textViewAgePetsNew"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ptsans"
        android:text="Age"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPet"
        app:layout_constraintTop_toBottomOf="@+id/textViewTypePetsNew" />
</androidx.constraintlayout.widget.ConstraintLayout>